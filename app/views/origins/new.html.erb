<%= form_with scope: :origin, url: origins_path, local: true do |form| %>

  <p>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </p>

  <p>
    <%= form.label :phone_no %><br>
    <%= form.text_area :phone_no %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Home', origins_path %>